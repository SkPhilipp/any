#!/usr/bin/env bash

set -e
set -o pipefail

(
  # navigate to the root of the project
  while [ ! -f pyproject.toml ]; do
    cd ..
    if [ $PWD == "/" ]; then
      echo "Could not find pyproject.toml in any parent directory" >&2
      exit 1
    fi
  done

  # project name is the name of the current directory
  basename "$PWD"
)
