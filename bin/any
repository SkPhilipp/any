#!/usr/bin/env bash

set -e
set -o pipefail

command=$1

if [ -z "$command" ]; then
  echo "Usage: any <command>" >&2
  echo "  Commands:" >&2
  echo "    deploy" >&2
  echo "    home" >&2
  echo "    install" >&2
  echo "    project" >&2
  echo "    undeploy" >&2
  exit 1
fi

if [ "$command" = "deploy" ]; then
  shift
  any-deploy "$@"
elif [ "$command" = "home" ]; then
  shift
  any-home "$@"
elif [ "$command" = "install" ]; then
  shift
  any-install "$@"
elif [ "$command" = "project" ]; then
  shift
  any-project "$@"
elif [ "$command" = "undeploy" ]; then
  shift
  any-undeploy "$@"
else
  echo "Unknown command: $command" >&2
  exit 1
fi
